generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Post {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  imageUrl    String?
  likes       Int      @default(0)
  createdAt   DateTime @default(now())

  createdBy   User @relation("CreatedPosts", fields: [createdById], references: [id])
  createdById Int

  PostTag PostTag[]
  likedBy PostLike[]
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String @unique

  PostTag PostTag[]
}

model PostTag {
  post   Post @relation(fields: [postId], references: [id])
  postId Int
  tag    Tag  @relation(fields: [tagId], references: [id])
  tagId  Int

  @@id([postId, tagId])
}

model User {
  id           Int     @id @default(autoincrement())
  firstName    String
  secondName   String
  email        String  @unique
  avatar       String?  
  password     String  
  isAdmin      Boolean @default(false)
  createdPosts Post[]  @relation("CreatedPosts")
  likedPosts   PostLike[]
}

model PostLike {
  user   User @relation(fields: [userId], references: [id])
  userId Int
  post   Post @relation(fields: [postId], references: [id])
  postId Int

  @@id([userId, postId])
}
